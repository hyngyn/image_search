<div class="body_container">

  <h1><%=params[:search]%></h1>

    <div id="photos_container">
    <% @photos_array.each do |p| %>

      <%= link_to '#' do %>
        <<%="div class='each_photo_container' id='#{p[:id]}'" %>>
          <%= image_tag p[:s_url] %>
        </div>
      <% end %>

    <!-- Load Modal onClick -->
    <script type="text/javascript">
    jQuery(function() {
      $('#<%=p[:id]%>').click(function (e) {

        //edit innerHTML of basic_modal
        $('.basic_modal').html("<p><%= escape_javascript(image_tag p[:url]) %></p>");

        //load modal
	      $('.basic_modal').modal({
          overlayClose:true
        });

        return false;
      });
    });

    </script>



    <% end %>

    <div class="basic_modal">
    </div>

  </div>
</div>
